<h1>New ingredient</h1>

<div class="add_ingredient_container">
  <div>
    <p>Choose one food</p>
    <%= render "ingredient_form", new_recipe_food: @new_recipe_food %>  
  </div>

  <h5> or/ </h5>

  <div>
    <p>Add a new food</p>
    <!--<%= render "food_form", food: @new_food %>-->
    <%= form_with(model: @new_food) do |form| %>
  <% if @new_food.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@new_food.errors.count, "error") %> prohibited this food from being saved:</h2>

      <ul>
        <% @new_food.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :unit, style: "display: block" %>
    <%= form.text_field :unit %>
  </div>

  <div>
    <%= form.label :price, style: "display: block" %>
    <%= form.number_field :price %>
  </div>

  <div>
    <%= form.number_field :quantity, style: "display: none", value: 0 %>
  </div>

  <div>
    <%= form.number_field :recipe_id, style: "display: none", value: params[:id] %>
  </div>

  <div>
    <%= form.label :recipe_food_quantity, style: "display: block" %>
    <%= form.number_field :recipe_food_quantity %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>

  </div>
</div>


<div>
  <%= link_to "Back to recipes", recipes_path %>
</div>
